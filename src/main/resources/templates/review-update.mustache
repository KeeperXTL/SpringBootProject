<!doctype html>
<html lang="ru">
{{> head}}
{{> header}}
<body>
<div class="container mt-5">
    <h1>Редактирование записи "{{title}}"</h1>
    <form method="post">
        <input type="text" name="title" placeholder="Название" class="form-control" value="{{review.title}}"><br>
        <textarea name="text" placeholder="Текст" class="form-control">{{review.text}}</textarea><br>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}">
        <button type="submit" class="btn btn-success">Обновить</button>
    </form>
</div>
</body>
{{> footer}}
</html>